<script>



  const submitbutton = document.getElementById("btn");

  var editingExpId = null;

  function submitfun() {

    submitbutton.addEventListener("click", (e) => {
      e.preventDefault();
      const expenceamout = document.getElementById("exp").value;
      const description = document.getElementById("dsc").value;
      const catogery = document.getElementById("typ").value;

      const obj = {
        expenceamout,
        description,
        catogery
      }


      axios.post("https://crudcrud.com/api/76732d034a4e47c5a6ab79c623d4e0dc/expencetracker", obj)
        .then((response) => {
          console.log(response);
        })
        .catch((err) => console.log(err));



      diplaydata(obj);


    })

  }
  submitfun();




  function diplaydata(data) {
    const ul = document.getElementById("listofitems");
    const li = document.createElement("li");
    li.appendChild(
      document.createTextNode(data.expenceamout + " " + data.description + " " + data.catogery + " ")
    );

    const a1 = document.createElement("input");
    a1.id = "editid";
    a1.type = "button";
    a1.value = "Edit";
    a1.class = "form-control";
    a1.style = "width:100px";
    a1.class = "btn btn-light"
    a1.addEventListener("click", (e) => {
      e.preventDefault();
      document.getElementById("exp").value = data.expenceamout;
      document.getElementById("dsc").value = data.description;
      document.getElementById("typ").value = data.catogery;
      editingExpId = data._id;

      async function fun2() {
        await axios.delete("https://crudcrud.com/api/76732d034a4e47c5a6ab79c623d4e0dc/expencetracker/" + data._id)
          .then((response) => { console.log("deleted") })
          .catch((error) => { console.log(error) });
      }
      fun2();


      // submitfun();
      li.remove();

    });

    const a = document.createElement("input");
    a.id = "delid";
    a.type = "button";
    a.value = "delete";
    a.class = "form-control";
    a.style = "width:100px";
    a.addEventListener("click", (e) => {
      e.preventDefault();
      async function fun() {
        await axios.delete("https://crudcrud.com/api/76732d034a4e47c5a6ab79c623d4e0dc/expencetracker/" + data._id)
          .then((response) => { console.log("deleted") })
          .catch((error) => { console.log(error) });
      }
      fun();
      console.log(data._id);
      li.remove();


    });

    li.appendChild(a1);
    li.appendChild(a);

    ul.appendChild(li);

  }


  
  window.addEventListener("DOMContentLoaded", () => {
    axios.get("https://crudcrud.com/api/76732d034a4e47c5a6ab79c623d4e0dc/expencetracker")
      .then((response) => {
        for (var i = 0; i < response.data.length; i++)
          diplaydata(response.data[i]);
      })
      .catch((error) => {
        console.log(error)
      })
  });

</script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
